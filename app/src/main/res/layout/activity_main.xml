<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_form"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/res_text"
        android:layout_width="match_parent"
        android:layout_height="450sp"
        android:layout_marginTop="10sp"
        android:textSize="24sp" />
    <Button
        android:id="@+id/btclean"
        android:layout_width="100sp"
        android:layout_marginLeft="5sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/btumnoz"
        android:layout_alignParentRight="true"
        android:text="AC" />
    <Button
        android:id="@+id/bt1"
        android:layout_width="100sp"
        android:layout_marginLeft="5sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/btdel"
        android:text="1" />

    <Button
        android:id="@+id/bt2"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/btdel"
        android:layout_toEndOf="@+id/bt1"
        android:text="2" />
    <Button
        android:id="@+id/bt3"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/btdel"
        android:layout_toEndOf="@+id/bt2"
        android:text="3" />
    <Button
        android:id="@+id/btumnoz"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_marginTop="10sp"
        android:layout_above="@+id/btdel"
        android:layout_toEndOf="@+id/bt3"
        android:text="*" />
    <Button
        android:id="@+id/bt4"
        android:layout_width="100sp"
        android:layout_marginLeft="5sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btsumm"
        android:text="4" />

    <Button
        android:id="@+id/bt5"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btsumm"
        android:layout_toEndOf="@+id/bt4"
        android:text="5" />
    <Button
        android:id="@+id/bt6"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btsumm"
        android:layout_toEndOf="@+id/bt5"
        android:text="6" />
    <Button
        android:id="@+id/btdel"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btsumm"
        android:layout_toEndOf="@+id/bt6"
        android:text="/" />
    <Button
        android:id="@+id/bt7"
        android:layout_width="100sp"
        android:layout_marginLeft="5sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btminus"
        android:text="7" />

    <Button
        android:id="@+id/bt8"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btminus"
        android:layout_toEndOf="@+id/bt7"
        android:text="8" />
    <Button
        android:id="@+id/bt9"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btminus"
        android:layout_toEndOf="@+id/bt2"
        android:text="9" />
    <Button
        android:id="@+id/btsumm"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_above="@+id/btminus"
        android:layout_toEndOf="@+id/bt3"
        android:text="+" />
    <Button
        android:id="@+id/btdot"
        android:layout_width="100sp"
        android:layout_marginLeft="5sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:text="." />

    <Button
        android:id="@+id/bt0"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bt7"
        android:text="0" />
    <Button
        android:id="@+id/btresult"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/bt2"
        android:text="=" />
    <Button
        android:id="@+id/btminus"
        android:layout_width="100sp"
        android:layout_height="50sp"
        android:layout_toEndOf="@+id/bt3"
        android:layout_alignParentBottom="true"
        android:text="-" />
</RelativeLayout>